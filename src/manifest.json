{
  "name": "Script Runner Chrome Extension",
  "description": "Run custom javascript on websites using local filesystem scripts",
  "version": "0.01",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "file:///*", "tabs", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["file:///*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
